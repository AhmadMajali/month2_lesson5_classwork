<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/x"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/x_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSign"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLogin"
        android:textColor="@color/green"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="22dp"
        android:textSize="20dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:backgroundTint="@color/grayLight"
        android:textColorHint="@color/grayDark"
        android:id="@+id/email"
        android:layout_width="330dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_"
        android:gravity="left"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:backgroundTint="@color/grayLight"
        android:textColorHint="@color/grayDark"
        android:id="@+id/name"
        android:layout_width="330dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_"
        android:gravity="left"
        android:hint="Name"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSign" />

    <EditText

        android:backgroundTint="@color/grayLight"
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_"
        android:gravity="left"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/grayDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/info"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="I would like to receive your newsletter and other promotional information."
        android:textColor="@color/grayDark"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btnSign"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/edit_text_"
        android:backgroundTint="@color/bottomGreen"
        android:text="Sign Up"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/info"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <TextView
        android:id="@+id/forgot"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Forgot your password?"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="@+id/btnSign"
        app:layout_constraintStart_toStartOf="@+id/btnSign"
        app:layout_constraintTop_toBottomOf="@+id/btnSign" />

    <Button
        android:id="@+id/blank"
        android:layout_marginLeft="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/edit_text_"
        android:backgroundTint="@color/grayLight"
        android:layout_marginTop="338dp"
        app:layout_constraintEnd_toStartOf="@+id/info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/show"
        android:textColor="@color/green"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="40dp"
        android:textSize="17dp"
        android:text="Show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>